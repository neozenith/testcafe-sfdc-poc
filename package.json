{
  "name": "testcafe-poc",
  "version": "1.0.0",
  "description": "POC TestCafe tooling on Salesforce org",
  "main": "index.js",
  "scripts": {
    "test": "testcafe --screenshots \"screenshots/\" --screenshots-on-fails \"chrome:headless\",\"firefox:headless\" tests/*.js",
    "test-all": "testcafe --screenshots \"screenshots/\" --screenshots-on-fails \"chrome\",\"firefox\" tests/*.js",
    "test-chrome": "testcafe --screenshots \"screenshots/\" --screenshots-on-fails \"chrome\" tests/*.js",
    "test-firefox": "testcafe --screenshots \"screenshots/\" --screenshots-on-fails \"firefox\" tests/*.js",
    "test-chrome-headless": "testcafe --screenshots \"screenshots/\" --screenshots-on-fails \"chrome:headless\" tests/*.js",
    "test-firefox-headless": "testcafe --screenshots \"screenshots/\" --screenshots-on-fails \"firefox:headless\" tests/*.js"
  },
  "author": "Josh Peak (josh.peak@cloudsense.com)",
  "license": "ISC",
  "dependencies": {
    "testcafe": "^0.19.1-dev20180305"
  },
  "devDependencies": {
    "dotenv": "5.x",
    "eslint": "4.x",
    "eslint-plugin-testcafe": "0.x",
    "prettier": "1.x"
  }
}
